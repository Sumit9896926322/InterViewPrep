package recursion;

class Speed {
  String speed;
  
  public static void main(String[] args) {
	  Speed s = new Speed();
	  SpeedImplememtation si = new SpeedImplememtation();
	  si.setSpeed(s,40);
} 
}

class SpeedImplememtation{
	String setSpeed(Speed s,int speedValue) {
		  try{
		   
		       // throw is used to create a new exception and throw it.
		       if(speedValue >=10 && speedValue<=200) {
					s.speed = "Valid Speed";
				}else {
					s.speed = "Invalid Speed";
				    throw new SpeedometerException("Error in Speedometer");
				}
		  }
		 catch(SpeedometerException e){
		    System.out.println(e) ;
		 }
		
		return s.speed;
	}
	
	  
}

class SpeedometerException extends Exception{
	SpeedometerException(String message) {
		super(message);
	}
}
