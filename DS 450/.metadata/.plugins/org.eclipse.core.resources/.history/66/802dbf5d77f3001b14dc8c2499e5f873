package recursion;

import java.util.ArrayList;
import java.util.Collections;

class Speed {
  ArrayList<String> arr = new ArrayList<String>();
  
  void removeProduct(String pName) {
	  if(arr.contains(pName)) {
		  arr.remove(pName);
	  }
  }
 void addProduct(String pName) {
	  arr.add(pName);
  }
 int uniqueProduct(String pName) {
	 return Collections.frequency(arr, pName);
 }
  public static void main(String[] args) {
	  Speed s = new Speed();
	  s.addProduct("pen");
	  s.addProduct("shirt");
	  s.removeProduct("shirt");
	 
	  System.out.println(s.uniqueProduct("pen"));
} 
}
